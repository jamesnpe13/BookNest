<Page
    x:Class="BookNest.Pages.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:BookNest.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookNest.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    Title="RegistrationPage"
    Background="{StaticResource Blue5}"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="auto">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border
                Width="400"
                Height="auto"
                Padding="40"
                Background="{StaticResource Blue2}"
                CornerRadius="{StaticResource CornerRadius2}">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="{StaticResource DropShadowBlur}" Opacity="{StaticResource DropShadowOpacity}" />
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <!--  Image section  -->

                    <Border Grid.Row="0" Margin="0,0,0,40">
                        <StackPanel Orientation="Vertical">
                            <svgc:SvgViewbox
                                Width="auto"
                                Height="auto"
                                MaxHeight="12"
                                Margin="0,0,0,40"
                                HorizontalAlignment="Center"
                                Opacity="0.5"
                                Source="/assets/booknest-logo-white.svg" />

                            <svgc:SvgViewbox Source="/assets/signin-graphic.svg" />
                        </StackPanel>
                    </Border>

                    <!--  Form section  -->
                    <Border Grid.Row="1" Margin="0,0,0,20">

                        <StackPanel Orientation="Vertical">
                            <Label
                                Margin="0,0,0,40"
                                Content="Create an account"
                                FontSize="{StaticResource Large}"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource White}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <components:TextInputField
                                    x:Name="FirstNameField"
                                    Grid.Column="0"
                                    Height="{StaticResource Controlheight2}"
                                    Margin="0,0,5,10"
                                    FieldStyle="Dark"
                                    Placeholder="First name" />
                                <components:TextInputField
                                    x:Name="LastNameField"
                                    Grid.Column="1"
                                    Height="{StaticResource Controlheight2}"
                                    Margin="5,0,0,10"
                                    FieldStyle="Dark"
                                    Placeholder="Last name" />
                            </Grid>
                            <components:TextInputField
                                x:Name="EmailField"
                                Height="{StaticResource Controlheight2}"
                                Margin="0,0,0,10"
                                FieldStyle="Dark"
                                Placeholder="Email" />
                            <components:TextInputField
                                x:Name="UsernameField"
                                Height="{StaticResource Controlheight2}"
                                Margin="0,0,0,10"
                                FieldStyle="Dark"
                                Placeholder="Username" />

                            <components:PasswordInputField
                                x:Name="PasswordField"
                                Height="{StaticResource Controlheight2}"
                                Margin="0,0,0,10"
                                FieldStyle="Dark"
                                Placeholder="Password" />
                            <components:PasswordInputField
                                x:Name="ConfirmPasswordField"
                                Height="{StaticResource Controlheight2}"
                                Margin="0,0,0,10"
                                FieldStyle="Dark"
                                Placeholder="Confirm password" />

                            <components:Dropdown
                                x:Name="RegistrationTypeDropdown"
                                Width="auto"
                                Height="{StaticResource Controlheight2}"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"
                                Placeholder="Account type" />

                        </StackPanel>
                    </Border>
                    <!--  Button section  -->
                    <Border Grid.Row="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <components:Button
                                x:Name="CancelButton"
                                Grid.Column="0"
                                Height="40"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Stretch"
                                ButtonHeight="Medium"
                                ButtonStyle="Destructive"
                                ButtonText="Cancel"
                                MouseDown="CancelButton_MouseDown" />

                            <components:Button
                                x:Name="RegisterButton"
                                Grid.Column="1"
                                Height="40"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Stretch"
                                ButtonHeight="Medium"
                                ButtonStyle="Primary"
                                ButtonText="Submit"
                                MouseDown="RegisterButton_MouseDown" />

                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>

</Page>
