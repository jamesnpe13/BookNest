<UserControl
    x:Class="BookNest.Components.TextButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookNest.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="auto"
    VerticalAlignment="Center"
    Cursor="Hand"
    mc:Ignorable="d">

    <Border>
        <TextBlock
            x:Name="ButtonTextBlock"
            FontSize="{StaticResource XSmall}"
            Foreground="{Binding ButtonStyle, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Text="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Border>
</UserControl>
