<Application
    x:Class="BookNest.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:BookNest"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <!--  Resource dictionaries  -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ColoursStyles.xaml" />
                <ResourceDictionary Source="Styles/GlobalVariables.xaml" />
                <ResourceDictionary Source="Styles/TypographyStyles.xaml" />

                <ResourceDictionary Source="Styles/PagesStyles.xaml" />
                <ResourceDictionary Source="Styles/LayoutsStyles.xaml" />
                <ResourceDictionary Source="Styles/NavButtonStyles.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Styles/TextBoxStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
